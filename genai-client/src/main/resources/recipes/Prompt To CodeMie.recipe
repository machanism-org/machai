<Recipe name="Prompt To CodeMie">
	<About>
		<description>
        This recipe automates the process of submitting prompts to the CodeMie web interface. 
        It checks for available input data, clears any previous chat history in the CodeMie interface, 
        pastes the new prompt using the clipboard, and submits it. The recipe then waits for the response 
        and retrieves the updated files or results generated by CodeMie. This workflow streamlines the 
        interaction with CodeMie for efficient prompt submission and result collection.
    	</description> 
	</About> 
	<!-- Inputs processing --> 
	<Out name="inputs" level="debug" /> 
	<If isNotNull="inputs">
		<Extern class="Web">
			<Click xpath="//button[@data-tooltip-content='Clear Chat']" exception="ignored" timeout="1s" /> 
			<Click xpath="//button[normalize-space(text())='Clear']" exception="ignored" timeout="1s" /> 
			<Wait delay="1s" /> 
			<Clipboard name="inputs" /> 
			<Text value="$var{\CONTROL+v}$var{\n}" xpath="//*[@id='app']/div[3]/div[2]/div/main/div/div[2]/div/div/div/div[2]/div/div/div[1]/div[2]/div[1]/p" timeout="5s" /> 
			<Wait delay="2s" /> 
			<ElementExists xpath="//button[contains(text(), 'Send')]" timeout="600s" /> 
			<GetText name="result">
				<xpath>//*[@id='app']/div[3]/div[2]/div/main/div/div[2]/div/div/div/div[1]/div/div[2]/div/div[3]/div/p/p</xpath> 
				<xpath>//*[@id="app"]/div[3]/div[2]/div/main/div/div[2]/div/div/div/div[1]/div/div[2]/div/div[3]/div/div/pre/code</xpath> 
			</GetText> 
			<Out name="result" /> 
		</Extern> 
	</If> 
</Recipe> 
